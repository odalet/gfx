<Styles xmlns="https://github.com/avaloniaui" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <Design.PreviewWith>
    <Grid RowDefinitions="*,*" Margin="0">
      <Grid.Styles>
        <Style Selector="Grid">
          <Setter Property="Margin" Value="2" />
        </Style>
        <Style Selector="Image">
          <Setter Property="Width" Value="64" />
          <Setter Property="Height" Value="64" />
        </Style>
      </Grid.Styles>
      <!-- Light Preview -->
      <UniformGrid Grid.Row="0" Rows="1" Columns="20" Background="DarkGreen">
        <UniformGrid.Styles>
          <StyleInclude Source="/Styles/light.axaml" />
          <Style Selector="Grid">
            <Setter Property="Background" Value="White" />
          </Style>
        </UniformGrid.Styles>
        <Grid>
          <Image Source="{DynamicResource IconAccentBrush1Image}" />
        </Grid>
        <Grid>
          <Image Source="{DynamicResource IconAccentBrush2Image}" />
        </Grid>
        <Grid>
          <Image Source="{DynamicResource OpenFile}" />
        </Grid>
        <Grid>
          <Image Source="{DynamicResource Exit}" />
        </Grid>
      </UniformGrid>
      <!-- Dark Preview -->
      <UniformGrid Grid.Row="1" Rows="1" Columns="20" Background="LightGreen">
        <UniformGrid.Styles>
          <StyleInclude Source="/Styles/dark.axaml" />
          <Style Selector="Grid">
            <Setter Property="Background" Value="Black" />
          </Style>
        </UniformGrid.Styles>
        <Grid>
          <Image Source="{DynamicResource IconAccentBrush1Image}" />
        </Grid>
        <Grid>
          <Image Source="{DynamicResource IconAccentBrush2Image}" />
        </Grid>
        <Grid>
          <Image Source="{DynamicResource OpenFile}" />
        </Grid>
        <Grid>
          <Image Source="{DynamicResource Exit}" />
        </Grid>
      </UniformGrid>
    </Grid>
  </Design.PreviewWith>
  
  <!-- See https://github.com/FrankenApps/Avalonia-CustomTitleBarTemplate -->
