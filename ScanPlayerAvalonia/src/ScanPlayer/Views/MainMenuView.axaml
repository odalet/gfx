<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:ScanPlayer.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="64"
             x:Class="ScanPlayer.Views.MainMenuView"
             d:DataContext="{x:Static vm:DesignerViewModels.MainViewModel}"
             x:DataType="vm:MainViewModel" x:CompileBindings="True">
  <UserControl.Styles>
    <Style Selector="Button.tool">
      <Setter Property="Width" Value="24" />
      <Setter Property="Height" Value="24" />
      <Setter Property="Margin" Value="2" />
    </Style>
    <Style Selector="Button.tool > Image">
      <Setter Property="Width" Value="16" />
      <Setter Property="Height" Value="16" />
    </Style>
    <Style Selector="Image.menu">
      <Setter Property="Width" Value="16" />
      <Setter Property="Height" Value="16" />
    </Style>
    <Style Selector="CheckBox.menu">
      <Setter Property="MinHeight" Value="0" />
      <Setter Property="Template">
        <Setter.Value>
          <ControlTemplate>
            <Grid VerticalAlignment="Center" Height="24">
              <Viewbox UseLayoutRounding="False">
                <Panel>
                  <Panel Height="16" Width="16" />
                  <Path x:Name="CheckGlyph" Stretch="Uniform" VerticalAlignment="Center" />
                </Panel>
              </Viewbox>
            </Grid>
          </ControlTemplate>
        </Setter.Value>
      </Setter>
    </Style>
  </UserControl.Styles>
  <StackPanel Orientation="Vertical">
    <Menu>
      <MenuItem Header="_File">
        <MenuItem Header="_Open..." Command="{Binding OpenCommand, Mode=OneTime}" InputGesture="Ctrl+O">
          <MenuItem.Icon>
            <Image Classes="menu" Source="{DynamicResource OpenFile}" />
          </MenuItem.Icon>
        </MenuItem>
        <MenuItem Header="E_xit" Command="{Binding ExitCommand, Mode=OneTime}" InputGesture="Alt+F4">
          <MenuItem.Icon>
            <Image Classes="menu" Source="{DynamicResource Exit}" />
          </MenuItem.Icon>
        </MenuItem>
      </MenuItem>
      <!--<MenuItem Header="_View">
        <MenuItem Header="_Scene Options" Command="{Binding ToggleSceneOptionsCommand}">
          <MenuItem.Icon>
            <CheckBox Classes="menu" IsChecked="{Binding IsSceneOptionsVisible}"/>
          </MenuItem.Icon>
        </MenuItem>
        <MenuItem Header="_Heads Info" Command="{Binding ToggleHeadsInfoCommand}">
          <MenuItem.Icon>
            <CheckBox Classes="menu" IsChecked="{Binding IsHeadsInfoVisible}"/>
          </MenuItem.Icon>
        </MenuItem>
      </MenuItem>-->
    </Menu>
    <StackPanel Orientation="Horizontal" Height="32">
      <Panel Margin="8,2,2,2" />
      <Button Classes="tool" Command="{Binding OpenCommand, Mode=OneTime}">
        <Image Source="{DynamicResource OpenFile}" />
      </Button>
      <Button Classes="tool" Command="{Binding ExitCommand, Mode=OneTime}">
        <Image Source="{DynamicResource Exit}" Width="16" Height="16" />
      </Button>
      <CheckBox Classes="menu" IsChecked="True"/>
      <CheckBox Classes="menu" IsChecked="False"/>
    </StackPanel>
  </StackPanel>
</UserControl>