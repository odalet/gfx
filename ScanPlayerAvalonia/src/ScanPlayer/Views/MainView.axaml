<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:idc="clr-namespace:Dock.Avalonia.Controls;assembly=Dock.Avalonia"
             xmlns:c="using:ScanPlayer.Controls"
             xmlns:v="using:ScanPlayer.Views"
             xmlns:vt="using:ScanPlayer.Views.Tools"
             xmlns:vm="using:ScanPlayer.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="ScanPlayer.Views.MainView"
             d:DataContext="{x:Static vm:DesignerViewModels.MainViewModel}"
             x:DataType="vm:MainViewModel" x:CompileBindings="True">
  <!--<Panel>
    <Border IsHitTestVisible="False" />
      <Panel>
        <idc:DockControl Layout="{Binding RootDock}" />
      </Panel>
  </Panel>-->
  <Grid RowDefinitions="auto,*,auto">
    <v:MainMenuView DataContext="{Binding}" />
    <!--<ContentControl Grid.Row="0" Content="{Binding MainMenuViewModel, Mode=OneTime}" />-->
    <Grid Grid.Row="1" ColumnDefinitions="160,*" Margin="4">
      <ScrollViewer Grid.Column="0" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" Margin="0 0 2 0">
      <StackPanel>
        <c:GroupBox Header="Scene Options" Margin="0 0 0 2">
          <ContentControl Content="{Binding SceneOptionsViewModel, Mode=OneTime}" Margin="2"/>
        </c:GroupBox>
        <c:GroupBox Header="Heads" Margin="0 2 0 2">
          <ContentControl Content="{Binding HeadsInfoViewModel, Mode=OneTime}" Margin="2"/>
        </c:GroupBox>
        <c:GroupBox Header="Tests" Margin="0 2 0 0">
          <Button Content="Open" Command="{Binding OpenCommand, Mode=OneTime}" />
        </c:GroupBox>
      </StackPanel>
      </ScrollViewer>
      <TabControl Grid.Column="1" Margin="2 0 0 0">
        <TabItem Header="Scene">
          <ContentControl Content="{Binding SceneDocumentViewModel, Mode=OneTime}" Margin="0"/>
        </TabItem>
        <TabItem Header="Tests">
          <ContentControl Content="{Binding TeapotDocumentViewModel, Mode=OneTime}" Margin="2"/>
        </TabItem>
      </TabControl>
    </Grid>
    <v:MainStatusBarView Grid.Row="2" />
  </Grid>
</UserControl>
