<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:v="using:ScanPlayer.Views"
        xmlns:vm="using:ScanPlayer.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="ScanPlayer.Views.MainWindow"
        d:DataContext="{x:Static vm:DesignerViewModels.MainWindowViewModel}"
        Icon="/Assets/avalonia-logo.ico"
        Title="ScanPlayer"
        Content="{Binding MainViewModel, Mode=OneTime}">

  <Window.KeyBindings>
    <KeyBinding Command="{Binding MainViewModel.OpenCommand, Mode=OneTime}" Gesture="Ctrl+O" x:CompileBindings="False" />
    <KeyBinding Command="{Binding MainViewModel.ExitCommand, Mode=OneTime}" Gesture="Alt+F4" x:CompileBindings="False" />
  </Window.KeyBindings>
</Window>
