<UserControl x:Class="ScanPlayerWpf.Views.SceneView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:v="clr-namespace:ScanPlayerWpf.Views"
             d:DataContext="{Binding SceneViewModel, Source={StaticResource Locator}, Mode=OneTime}"
             mc:Ignorable="d" d:DesignWidth="334" d:DesignHeight="239">
    <Grid Background="AliceBlue">
        <!--<Button Content="Test" HorizontalAlignment="Left" Margin="16,10,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
        <TextBlock HorizontalAlignment="Left" Margin="96,12,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="543"
                   Text="{Binding Workspace.ProjectFileName}"/>-->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="auto" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <v:SceneSurfaceView Grid.Row="0" Grid.Column="0" />
        <Slider Grid.Row="0" Grid.Column="1" Orientation="Vertical" />
        <Slider Grid.Row="1" Grid.Column="0" Orientation="Horizontal"/>
    </Grid>    
</UserControl>
