<UserControl x:Class="ScanPlayerWpf.Views.TimeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ScanPlayerWpf.Views"
             mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TextBox Grid.Row="0" Text="TIME" Margin="4"/>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0" Orientation="Vertical" Margin="4">
                <RadioButton Content="s" />
                <RadioButton Content="10th" />
                <RadioButton Content="100th" />
                <RadioButton Content="ms" />
            </StackPanel>
            <StackPanel Grid.Column="1" Orientation="Vertical" Margin="4">
                <Button Content="+" Width="24" Height="24" Margin="0,0,0,2"/>
                <Button Content="-" Width="24" Height="24" Margin="0,2,0,0" />
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
