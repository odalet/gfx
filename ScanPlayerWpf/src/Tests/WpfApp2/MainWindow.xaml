<Window x:Class="WpfApp2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:opengl="clr-namespace:OpenGL;assembly=OpenGL.Net.WinForms"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition />
        </Grid.RowDefinitions>
        <Menu x:Name="menu" Grid.Row="0">
            <MenuItem Header="File">
                <MenuItem Header="E_xit" Click="MenuItem_Click"/>
            </MenuItem>
        </Menu>
        <WindowsFormsHost x:Name="HostControl" Grid.Row="1" Loaded="HostControl_Loaded">
            <opengl:GlControl ContextCreated="GlControl_ContextCreated" Render="GlControl_Render" />
        </WindowsFormsHost>
    </Grid>
</Window>
